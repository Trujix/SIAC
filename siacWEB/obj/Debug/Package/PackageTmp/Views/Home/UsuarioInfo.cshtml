@{
    Layout = null;
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="col-sm-12">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" id="infoGeneral-tab" data-toggle="tab" href="#infoGeneral" role="tab" aria-controls="infoGeneral" aria-selected="true"><i class="fa fa-pen"></i> Información General</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="imgUsuario-tab" data-toggle="tab" href="#imgUsuario" role="tab" aria-controls="imgUsuario" aria-selected="false"><i class="fa fa-picture-o"></i> Imagen Usuario</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="usuarioInfoPass-tab" data-toggle="tab" href="#usuarioInfoPass" role="tab" aria-controls="usuarioInfoPass" aria-selected="false"><i class="fa fa-lock"></i> Contraseña</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="usuarioInfoTab">
                        <div class="tab-pane fade show active" id="infoGeneral" role="tabpanel" aria-labelledby="infoGeneral-tab">
                            <div class="row" style="padding-top: 10px;">
                                <div class="col-sm-12">
                                    <h5>Información de Usuario</h5>
                                </div>
                            </div>
                            <div class="row" style="padding-top: 8px;">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="usuarioInfoNombre"><i class="fa fa-user"></i>&nbsp;Nombre</label>
                                        <input type="text" id="usuarioInfoNombre" class="form-control form-control-sm" placeholder="Nombre" autocomplete="off" readonly />
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="usuarioInfoApellido"><i class="fa fa-user"></i>&nbsp;Apellido</label>
                                        <input type="text" id="usuarioInfoApellido" class="form-control form-control-sm" placeholder="Apellido" autocomplete="off" readonly />
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="usuarioInfoCorreo"><i class="fa fa-at"></i>&nbsp;Correo Electrónico</label>
                                        <input type="text" id="usuarioInfoCorreo" class="form-control form-control-sm" placeholder="Correo Electrónico" autocomplete="off" readonly />
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="padding-top: 10px;">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="usuarioInfoDireccion"><i class="fa fa-home"></i>&nbsp;Dirección</label>
                                        <input type="text" id="usuarioInfoDireccion" class="form-control form-control-sm" placeholder="Direccion" autocomplete="off" readonly />
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="usuarioInfoTelefono"><i class="fa fa-mobile"></i>&nbsp;Telefono</label>
                                        <input type="number" id="usuarioInfoTelefono" class="form-control form-control-sm" placeholder="Telefono" autocomplete="off" readonly />
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="usuarioInfoCelular"><i class="fa fa-phone"></i>&nbsp;Celular</label>
                                        <input type="number" id="usuarioInfoCelular" class="form-control form-control-sm" placeholder="Celular" autocomplete="off" readonly />
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="padding-top: 10px;">
                                <div class="col-sm-12">
                                    <h5>Información Adicional</h5>
                                </div>
                            </div>
                            <div id="usuarioInfoDivAdicional" class="row" style="padding-top: 8px;"></div>
                            <div class="row" style="padding-top: 10px;">
                                <div class="col-sm-3">
                                    <button id="usuarioInfoGuardar" class="btn btn-sm btn-block btn-success"><i class="fa fa-save"></i> Guardar Cambios</button>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="imgUsuario" role="tabpanel" aria-labelledby="imgUsuario-tab">
                            <div class="row" style="padding-top: 10px;">
                                <div class="col-sm-12">
                                    <h5 id="imagenUsuarioTitulo">--</h5>
                                </div>
                            </div>
                            <div class="row" style="padding-top: 8px;">
                                <div class="col-sm-12">
                                    <img id="imagenUsuarioPic" style="max-width: 200px;" />
                                </div>
                            </div>
                            <div class="row" style="padding-top: 8px;">
                                <div class="col-sm-3">
                                    <button id="imagenUsuarioBoton" class="btn btn-block btn-sm"></button>
                                    <input id="imagenUsuarioBotonDoc" type="file" style="visibility: hidden; font-size: 0px;" accept=".jpg, .jpeg, .png" />
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="usuarioInfoPass" role="tabpanel" aria-labelledby="usuarioInfoPass-tab">
                            <div class="row" style="padding-top: 10px;">
                                <div class="col-sm-12">
                                    <h5>Cambiar Contraseña</h5>
                                </div>
                            </div>
                            <div class="row" style="padding-top: 8px;">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label for="usuarioInfoAntPass"><i class="fa fa-user-lock"></i>&nbsp;Contraseña Anterior</label>
                                        <input type="password" id="usuarioInfoAntPass" class="form-control form-control-sm usuarioinfopass" placeholder="Contraseña Anterior" autocomplete="off" readonly />
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label for="usuarioInfoNuevaPass"><i class="fa fa-user-lock"></i>&nbsp;Nueva Contraseña</label>
                                        <input type="password" id="usuarioInfoNuevaPass" class="form-control form-control-sm usuarioinfopass" placeholder="Nueva Contraseña" autocomplete="off" readonly />
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label for="usuarioInfoNuevaPassO"><i class="fa fa-user-lock"></i>&nbsp;Repita Contraseña</label>
                                        <input type="password" id="usuarioInfoNuevaPassO" class="form-control form-control-sm usuarioinfopass" placeholder="Repita Contraseña" autocomplete="off" readonly />
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <button id="usuarioInfoPassGuardar" class="btn btn-success btn-sm btn-block" style="margin-top: 25px;"><i class="fa fa-save"></i> Guardar Cambios</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="modalAddImgUsuario" class="modal fade" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-camera"></i> Configurar Imagen</h5>
            </div>
            <div class="modal-body">
                <div id="modalAddImgUsuarioDivPic" class="row"></div>
                <div class="row" style="padding-top: 5px;">
                    <div class="col-sm-1">
                        <button id="modalAddImgUsuarioZMas" class="btn btn-sm btn-primary"><i class="fa fa-search-plus"></i></button>
                    </div>
                    <div class="col-sm-1">
                        <button id="modalAddImgUsuarioZMenos" class="btn btn-sm btn-primary"><i class="fa fa-search-minus"></i></button>
                    </div>
                    <div class="col-sm-4">
                        <button id="modalAddImgUsuarioGuardarSelec" class="btn btn-sm btn-success btn-block"><i class="fa fa-save"></i> Guardar Selección</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal"><i class="fa fa-times"></i> Cancelar</button>
            </div>
        </div>
    </div>
</div>